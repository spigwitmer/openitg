OnCommand="scaletoclipped,293,114;rotationz,180;zoomx,-1;x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y+103;ztest,1;diffusealpha,0;linear,1;y,SCREEN_CENTER_Y+70;diffusealpha,0.2"
