<!-- Banners -->
<Layer
Condition="not GAMESTATE:IsCourseMode()"
File="songbanner"
OnCommand="scaletoclipped,292,114;x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y-77;diffusealpha,0;linear,1;y,SCREEN_CENTER_Y-44;diffusealpha,1;ztest,1"
