<ActorFrame><children>
<!-- don't charge in metrics tween on/off command, do it here to get more effect --kung -->
<Layer
File="OptionsList cursor"
OnCommand="finishtweening;additiveblend,1;diffusealpha,0;zoomx,0.4"
OptionsListOpenedP2MessageCommand="finishtweening;linear,0.2;diffusealpha,1;zoomx,1"
OptionsListClosedP2MessageCommand="finishtweening;linear,0.2;diffusealpha,0;zoomx,0.4"
/>
<Layer
File="_p2 left cursor"
OnCommand="finishtweening;addx,-60;zoom,0.6;diffusealpha,0"
