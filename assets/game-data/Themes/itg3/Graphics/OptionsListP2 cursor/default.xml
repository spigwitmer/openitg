OptionsListPushP2MessageCommand="finishtweening;linear,0.1;diffusealpha,1;linear,0.1;diffusealpha,0"
OptionsListResetP2MessageCommand="finishtweening;diffusealpha,1;linear,0.1;diffusealpha,0"
/>
<Layer
File="_p2 right cursor"
OnCommand="finishtweening;addx,+60;zoom,0.6;diffusealpha,0"
OptionsListOpenedP2MessageCommand="finishtweening;diffusealpha,0"
OptionsListRightP2MessageCommand="finishtweening;linear,0.1;diffusealpha,1;linear,0.1;diffusealpha,0"
OptionsListStartP2MessageCommand="finishtweening;linear,0.1;diffusealpha,1;linear,0.1;diffusealpha,0"
